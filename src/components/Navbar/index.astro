---

type Props = {
  items: {
    id: string
    title: string
  }[]
}

const { items } = Astro.props

---

<header id="header" class="header">
  <input id="menu-toggle" type="checkbox" />
  <label class="menu-button-container" for="menu-toggle">
    <div class="menu-button"></div>
  </label>
  <nav class="links" style={`--items: ${items.length + 1};`}>
    <button data-section-id=hero>Home</button>
      { items.map(item => (
          <button data-section-id={item.id}>{item.title}</button>
      )) }
    <span class="line"></span>
  </nav>
</header>

