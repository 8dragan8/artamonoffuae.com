---
import backgroundUrl from '../assets/1.jpg'
import backgroundUrl2 from '../assets/2.jpg'
import Logo from '../components/logos/Logo.astro'

const backgroundUrlProp = `url("${backgroundUrl.src}")`
const backgroundUrlProp2 = `url("${backgroundUrl2.src}")`
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <div class='hero-image'>
      <div class='hero-text'>
        <div>
          <Logo />
        </div>
      </div>
    </div>
    <section class='section'></section>
  </body>
</html>

<style lang='scss' is:global>
  * {
    margin: 0;
    padding: 0;
    min-width: 0;
    min-height: 0;
    box-sizing: border-box;
  }
  body,
  html {
    height: 100%;
  }
</style>

<style lang='scss' define:vars={{ backgroundUrlProp, backgroundUrlProp2 }}>
  /* The hero image */
  .hero-image {
    background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), var(--backgroundUrlProp);
    height: 100%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
  }

  .section {
    background-image: var(--backgroundUrlProp2);
    height: 100%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
  }

  .hero-text {
    --border-outer: 1rem solid #0000005a;
    position: absolute;
    width: 100%;
    height: 33%;
    top: 5%;
    left: 0;
    border-top: var(--border-outer);
    border-bottom: var(--border-outer);

    border-image: 16 repeating-linear-gradient(-45deg, red 0, red 5em, transparent 0, transparent 10em, #b67 0, #b67 3em, transparent 0, transparent 4em);
    div {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 50%;
      transform: translate(-50%, -50%);
    }
  }
</style>
